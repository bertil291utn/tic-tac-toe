#!/usr/bin/env ruby

class Game
    
    def initialize (a_index)
        @array_value = a_index
    end

    def display_board (a_index)
        puts "\n"
        puts "#{a_index[0]} | #{a_index[1]} | #{a_index[2]} "
        puts "----------"
        puts "#{a_index[3]} | #{a_index[4]} | #{a_index[5]} "
        puts "----------"
        puts "#{a_index[6]} | #{a_index[7]} | #{a_index[8]} "
        puts "\n"
    end

    def get_user_input(a_index)
        puts "Please enter value between 1-9"
        user_input = gets.chomp
        chosen_index = user_input_to_index(user_input)
        display_board(a_index) 
    end

    def user_input_to_index(user_input)
        user_input.to_i - 1
    end

end

a_index = [1, 2, 3, 4, 5, 6, 7, 8, 9]
game = Game.new(a_index)


game.display_board(a_index)
game.get_user_input(a_index)
