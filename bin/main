#!/usr/bin/env ruby

class Game
=begin
    def initialize

        puts row = ["   " " | " "    " " | " "    "]
        puts separator  = "----------------"
        puts row
        puts separator
        puts row
    end
=end

    def display_board(a_index)
        puts "#{a_index[0]} | #{a_index[1]} | #{a_index[2]} "
        puts "----------"
        puts "#{a_index[3]} | #{a_index[4]} | #{a_index[5]} "
        puts "----------"
        puts "#{a_index[6]} | #{a_index[7]} | #{a_index[8]} "
    end

end

game = Game.new

a_index = ["X", 2, 3, 4, 5, 6, 7, 8, 9]
game.display_board(a_index)
